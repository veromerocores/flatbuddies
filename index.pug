doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    |     
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    |     
    title FlatBuddies
    |     
    style.
      body, html {
      margin: 0;
      padding: 0;
      height: 100%;
      background-color: white;
      }
      .NavBar {
      display: flex;
      justify-content: space-between;
      align-items: center;
      width: auto;
      height: 7vw;
      padding-left: 5vw;
      padding-right: 5vw;
      border-bottom: solid 0.5px;
      }
      .Logo {
      width: 18%;
      height: auto;
      margin-right: 68%;
      }
      .buttons {
      display: flex;
      align-items: center;
      justify-content: space-between;
      width: 200px;
      color: #FE6941;
      }
      .loginbutton{
      background-color: #FE6941;
      font-family: Arial, Helvetica, sans-serif;
      font-size: 1.5vw;
      width: 10vw;
      height: 2.2vw;
      align-items: center;
      justify-content: center;
      display: flex;
      margin-top: 2%;
      border-radius: 15px;
      border: solid;
      border-width: 0.5px;
      cursor: pointer;
      text-decoration: none;
      color: #000;
      }
      .loginbutton:hover{
      background-color: #FE6941;
      box-shadow: inset 0px 5px 5px -5px rgba(0,0,0,0.75);
      text-decoration: none;
      }
      .tophalf {
      width: 100%;
      height: auto;
      background-color: #F2E9E2;
      }
      .lukecel {
      margin-top: 10%;
      margin-left: 10%;
      width: 20%;
      height: auto;
      position: relative;
      }
      .picture {
      width: 100%;
      height: auto;
      object-fit: cover;
      }
      .profile {
      border-radius: 4vw;
      display: flex;
      width:  100%;
      height: auto;
      margin-right: 10%;
      }
      .picturemask {
      border-radius: 50%;
      width: 6vw;
      height: 6vw;
      display: flex;
      flex: none;
      position: absolute;
      top: -8%;
      left: 34%;
      overflow: hidden;
      }
      .slogcont {
      width: 25%;
      height: auto;
      display: flex;
      margin-left: 10%;
      }
      .slogan {
      font-family: Arial, Helvetica, sans-serif;
      font-size: 4vw;
      text-align: center;
      display: flex;
      font-weight: bold;
      }
      .content {
      display: flex;
      flex-direction: row;
      align-items: center;
      flex-wrap: wrap;
      }
      .triangle {
      position: relative;
      margin-top: 5%;
      width: 95%;
      height: 100%;
      z-index: 0;
      object-fit: cover;
      }
      .tricont {
      width: auto;
      position: relative;
      overflow: hidden;
      display: flex;
      align-items: flex-start;
      height: 100%;
      }
      .text {
      font-family: Arial, Helvetica, sans-serif;
      font-size: min(1.3vw, 24px);
      text-align: center;
      width: 28%;
      position: absolute;
      top: 65%;
      left: 53%;
      transform: translate(-50%, -50%);
      display: flex;
      align-items: center;
      justify-content: center;
      z-index: 1;
      }
      .usertxt {
      text-align: center;
      font-family: Arial, Helvetica, sans-serif;
      font-size: 2vw;
      font-weight: bold;
      margin-top: 5%;
      margin-bottom: 6%;
      }
      .saying {
      text-align: center;
      font-size: 1.5vw;
      font-family: Arial, Helvetica, sans-serif;
      margin-bottom: 2%;
      }
      .reviews {
      display: flex;
      justify-content: center;
      align-items: center;
      flex-wrap: wrap;
      }
      .boxes{
      margin: 3vw;
      border: solid;
      border-width: 1px;
      border-radius: 30px;
      border-color: black;
      width: 20%;
      }
      footer {
      color: #000000;
      }
      .footer-container {
      display: flex;
      justify-content: space-around;
      width: 75%;
      margin-left: 9vw;
      padding: 15px;
      }
      .footer-section {
      flex: 1;
      }
      .footer-section h3 {
      font-family: sans-serif;
      font-size: 1.4vw;
      }
      .footer-section ul {
      list-style-type: none;
      padding: 0;
      }
      .footer-section ul li {
      margin-bottom: 1vw;
      font-family: sans-serif;
      font-weight: 200;
      font-size: 1vw;
      }
      .footer-section ul li a {
      text-decoration: none;
      color: inherit;
      }
      .footer-section ul li a:hover{
      color: #FE6941;
      }
      .footer-section img{
      width: 100%;
      height: auto;
      margin-top: 30%;
      margin-left: 15%;
      }
      @media screen and (max-width: 368px) {
      .footer-container {
      flex-direction: column;
      align-items: center;
      }
      .footer-section {
      margin-top: 20px;
      text-align: center;
      }
      .footer-section img {
      margin: 10px auto;
      }
      }
      .copyright {
      height: 8vw;
      border-top: 0.1vw solid #000;
      }
      .copyright p {
      margin-top: 3vw;
      margin-left: 70vw;
      color: #999;
      font-family: sans-serif;
      font-size: 1vw;
      }
